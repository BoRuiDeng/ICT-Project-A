    <div class="mfa-container">
        <!-- MFA Header -->
        <div class="mfa-header">
            <h1>Multi-Factor Authentication</h1>
            <p>Please answer the security questions to verify your identity.</p>
        </div>

        <!-- Security Questions -->
        <div class="mfa-question">
            1. What is the name of your first pet?
        </div>
        <input type="text" class="mfa-input" placeholder="Enter your answer" id="mfa-answer-1">

        <div class="mfa-question">
            2. What is your mother's maiden name?
        </div>
        <input type="text" class="mfa-input" placeholder="Enter your answer" id="mfa-answer-2">

        <div class="mfa-question">
            3. What city were you born in?
        </div>
        <input type="text" class="mfa-input" placeholder="Enter your answer" id="mfa-answer-3">

        <!-- Submit Button -->
        <button class="btn" onclick="verifyAnswers()">Submit</button>

        <!-- Error Message -->
        <div class="error-message" id="error-message" style="display: none;">
            One or more answers are incorrect. Please try again.
        </div>
    </div>

    <script>
        function verifyAnswers() {
            const answer1 = document.getElementById('mfa-answer-1').value.trim();
            const answer2 = document.getElementById('mfa-answer-2').value.trim();
            const answer3 = document.getElementById('mfa-answer-3').value.trim();
            const errorMessage = document.getElementById('error-message');

            // Example: Replace these with the correct answers from your backend
            const correctAnswer1 = 'Fluffy';
            const correctAnswer2 = 'Smith';
            const correctAnswer3 = 'New York';

            if (
                answer1.toLowerCase() === correctAnswer1.toLowerCase() &&
                answer2.toLowerCase() === correctAnswer2.toLowerCase() &&
                answer3.toLowerCase() === correctAnswer3.toLowerCase()
            ) {
                alert('Authentication successful!');
                // Redirect to the dashboard or next page
                window.location.href = 'dashboard.html';
            } else {
                errorMessage.style.display = 'block';
            }
        }
    </script>
