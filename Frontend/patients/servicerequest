    <!-- Main Content -->
    <div class="main-content">
    
        <!-- Add Service Form -->
        <div class="form-container">
            <h3>Add New Service Request</h3>
            <form id="add-service-form">
                <input type="text" id="service-name" placeholder="Service Name" required>
                <input type="text" id="requesting-user" placeholder="Requesting User" required>
                <input type="text" id="user-id" placeholder="User ID" required>
                <input type="date" id="registration-date" placeholder="Registration Date" required>
                <input type="text" id="status" placeholder="Status (e.g., Pending, Completed)" required>
                <button type="submit">Confirm</button>
            </form>
        </div>
    </div>

    <script>
        const serviceList = document.getElementById('service-list');
        const addServiceForm = document.getElementById('add-service-form');

        // Add new service request
        addServiceForm.addEventListener('submit', function (e) {
            e.preventDefault();

            const serviceName = document.getElementById('service-name').value;
            const requestingUser = document.getElementById('requesting-user').value;
            const userId = document.getElementById('user-id').value;
            const registrationDate = document.getElementById('registration-date').value;
            const status = document.getElementById('status').value;

            const newRow = document.createElement('tr');
            newRow.innerHTML = `
                <td>${serviceName}</td>
                <td>${requestingUser}</td>
                <td>${userId}</td>
                <td>${registrationDate}</td>
                <td>${status}</td>
                <td>
                    <button class="btn btn-primary" onclick="editService(this)">Edit</button>
                    <button class="btn btn-primary" onclick="deleteService(this)">Delete</button>
                </td>
            `;

            serviceList.appendChild(newRow);
            addServiceForm.reset();
        });

        // Edit service request
        function editService(button) {
            const row = button.parentElement.parentElement;
            const serviceName = row.children[0].textContent;
            const requestingUser = row.children[1].textContent;
            const userId = row.children[2].textContent;
            const registrationDate = row.children[3].textContent;
            const status = row.children[4].textContent;

            document.getElementById('service-name').value = serviceName;
            document.getElementById('requesting-user').value = requestingUser;
            document.getElementById('user-id').value = userId;
            document.getElementById('registration-date').value = registrationDate;
            document.getElementById('status').value = status;

            row.remove();
        }

        // Delete service request
        function deleteService(button) {
            const row = button.parentElement.parentElement;
            row.remove();
        }
    </script>
